{% extends 'base.html.twig' %}

{% block title %}WebsiteHandler index{% endblock %}

{% block body %}
    <h1>WebsiteHandler index</h1>

    {% if is_granted('ROLE_USER') %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Url</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for website_handler in website_handlers %}
            <tr>
                <td>{{ website_handler.id }}</td>
                <td>{{ website_handler.label }}</td>
                <td>{{ website_handler.url }}</td>
                <td>{{ website_handler.status }}</td>
                <td>
                    <a href="{{ path('websitehandler_show', {'id': website_handler.id}) }}">show</a>
                    <a href="{{ path('websitehandler_edit', {'id': website_handler.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('websitehandler_new') }}">Create new</a>

    {% endif %}
{% endblock %}
